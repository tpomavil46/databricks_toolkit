{
  "type": "job",
  "name": "sample-data-pipeline",
  "description": "A sample data pipeline job",
  "tasks": [
    {
      "task_key": "bronze_ingestion",
      "description": "Ingest data to bronze layer",
      "notebook_task": {
        "notebook_path": "/Repos/databricks_toolkit/pipelines/bronze_ingestion",
        "base_parameters": {
          "project_name": "ecommerce"
        }
      }
    },
    {
      "task_key": "silver_transformation",
      "description": "Transform data in silver layer",
      "notebook_task": {
        "notebook_path": "/Repos/databricks_toolkit/pipelines/silver_transformation",
        "base_parameters": {
          "project_name": "ecommerce"
        }
      },
      "depends_on": [
        {
          "task_key": "bronze_ingestion"
        }
      ]
    }
  ],
  "schedule": {
    "quartz_cron_expression": "0 0 2 * * ?",
    "timezone_id": "UTC"
  },
  "max_concurrent_runs": 1,
  "timeout_seconds": 3600
} 